<section id="hero" class="relative min-h-screen flex items-center overflow-hidden bg-[#0B0F14]">
  <!-- Background Effects -->
  <div class="absolute inset-0 overflow-hidden">
    <!-- Radial gradient overlay -->
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-primary-900/30 via-[#0B0F14] to-[#0B0F14]" />
