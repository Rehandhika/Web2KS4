---
interface Props {
  id: number;
  name: string;
  role: string;
  photo: string;
  quote?: string;
  isOfficer?: boolean;
}

const { id, name, role, photo, quote, isOfficer = false } = Astro.props;
---

<div
  class="student-card card-base card-hover group"
  data-role={role}
>
  <div class="aspect-w-1 aspect-h-1 w-full overflow-hidden bg-gray-800">
    <img
      src={photo}
      alt={name}
      loading="lazy"
      class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-105"
    />
  </div>
  <div class="p-4">
    <div class="flex items-center justify-between mb-1">
      <h3 class="font-semibold text-white">{name}</h3>
      {isOfficer && (
        <span class="px-2 py-1 bg-primary-600/20 text-primary-400 text-xs font-medium rounded-full">
          {role}
        </span>
      )}
    </div>
    {!isOfficer && (
      <p class="text-sm text-gray-400">{role}</p>
    )}
    {quote && (
      <p class="mt-2 text-sm text-gray-300 italic">"{quote}"</p>
    )}
  </div>
</div>
