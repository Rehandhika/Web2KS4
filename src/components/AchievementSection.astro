const achievements = [
  {
    year: "2024",
    title: "Best Tech Class Award",
    organization: "Internal Faculty",
    description: "Awarded for the most active and innovative class in technical projects."
  },
  {
    year: "2023",
    title: "Hackathon Finalists",
    organization: "National Competition",
    description: "Represented the campus in a nationwide coding marathon."
  },
  {
    year: "2023",
    title: "Dean's List Excellence",
    organization: "Academic Board",
    description: "Highest percentage of students with GPA above 3.8."
  }
];
---

<section id="achievements" class="relative min-h-screen lg:h-screen w-full flex items-center justify-center bg-midnight-900 overflow-hidden py-20 lg:py-0">
  <div class="absolute top-0 right-0 w-1/3 h-full bg-azure/5 blur-[120px] -z-10"></div>
  
  <div class="container-custom w-full">
    <div class="flex flex-col md:flex-row md:items-end justify-between mb-16 gap-8">
      <div>
        <h2 class="text-xs uppercase tracking-[0.3em] text-azure font-bold mb-4">Milestones</h2>
        <h3 class="text-4xl md:text-5xl font-black text-white">THE WIN STREAK</h3>
      </div>
      <div class="max-w-md">
        <p class="text-mist/60 text-sm leading-relaxed">Our journey is defined by the challenges we've conquered and the standards we've set for ourselves.</p>
      </div>
    </div>

    <div class="space-y-4">
      {achievements.map((item) => (
        <div class="achievement-item group relative py-8 px-6 md:px-12 rounded-none transition-all duration-300 hover:bg-white/5 border-l border-white/10 hover:border-azure">
          <div class="flex flex-col md:flex-row md:items-center gap-6 md:gap-12 relative z-10">
            <div class="text-azure font-mono text-2xl w-24">{item.year}</div>
            <div class="flex-grow">
              <h4 class="text-xl font-bold text-white mb-2">{item.title}</h4>
              <p class="text-mist/40 font-mono text-[10px] uppercase tracking-wider mb-2">{item.organization}</p>
              <p class="text-mist/60 max-w-xl font-light text-sm">{item.description}</p>
            </div>
            <div class="hidden md:block opacity-0 group-hover:opacity-100 transition-all duration-500 translate-x-[-10px] group-hover:translate-x-0">
               <span class="text-azure font-mono text-xs">VIEW_DATA -></span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>