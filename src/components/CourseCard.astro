---
interface Course {
  id: number;
  title: string;
  code: string;
  credits: number;
  semester: string;
  description: string;
  details: string[];
  instructor: string;
  hours: number;
}

interface Props {
  course: Course;
}

const { course } = Astro.props;
---

<article class="course-card bg-midnight-800 border border-white/5 p-8 transition-all duration-500 hover:border-azure/40 group">
  <div class="cursor-pointer course-header h-full flex flex-col justify-between">
    <div>
      <div class="flex items-center justify-between mb-8">
        <span class="font-mono text-[10px] tracking-[0.4em] text-azure uppercase bg-azure/5 px-3 py-1">
          {course.code}
        </span>
        <svg
          class="w-5 h-5 text-mist/20 transition-all duration-500 course-arrow group-hover:text-azure"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 9l-7 7-7-7" />
        </svg>
      </div>
      
      <h3 class="font-display font-bold text-2xl text-white mb-6 group-hover:text-azure transition-colors">{course.title}</h3>
      <p class="text-sm text-mist/60 font-light leading-relaxed mb-8">{course.description}</p>
    </div>
    
    <div class="flex flex-wrap gap-6 text-[10px] font-mono tracking-widest text-mist/40 uppercase pt-8 border-t border-white/5">
      <div class="flex items-center">
        <span class="text-azure mr-2">//</span> {course.credits} Credits
      </div>
      <div class="flex items-center">
        <span class="text-azure mr-2">//</span> {course.semester}
      </div>
    </div>
  </div>
  
  <div class="course-details hidden pt-8">
    <div class="space-y-4">
      <h4 class="font-mono text-[10px] tracking-widest text-azure uppercase">Course Topics:</h4>
      <ul class="space-y-2">
        {course.details.map((detail) => (
          <li class="text-xs text-mist/50 font-light flex items-start">
            <span class="text-azure mr-3 mt-0.5">â€¢</span>
            {detail}
          </li>
        ))}
      </ul>
      <div class="pt-6 mt-6 border-t border-white/5">
        <p class="font-mono text-[10px] tracking-widest text-mist/40 uppercase">
          <span class="text-azure">Instructor:</span> {course.instructor}
        </p>
      </div>
    </div>
  </div>
</article>
